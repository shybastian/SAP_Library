<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core" xmlns:c="sap.ui.core" xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form" xmlns:ui="sap.ui">
    <Dialog>
         <f:SimpleForm id="idInsertNewBookForm"
            maxContainerCols="2"
            editable="true"
            layout="ResponsiveGridLayout"
            title="Add a new Book Form"
            labelSpanL="2"
            labelSpanM="2"
            emptySpanL="0"
            emptySpanM="0"
            columnsL="1"
            columnsM="1"
            class="editableForm">

            <f:content>
                <core:Title text="New Book Information" />
                <Label text="ISBN"/>
                <Input value="{/ISBN}" placeholder="ISBN of new Book."/>
                <Label text="Title"/>
                <Input value="{/Title}" placeholder="Title of the Book"/>
                <Label text="Author"/>
                <Input value="{/Author}" placeholder="Author of new Book."/>
                <Label text="Publishing Date"/>
                <DatePicker value="{/DatePublished}"/>
                <Label text="Language"/>
                <Input value="{/Language}" placeholder="Language Code of the Book"/>
                <Label text="Total No. of Books"/>
                <Input value="{path:'/TotalNumber', type:'sap.ui.model.odata.type.Int16'}" placeholder="Total No. of Books."/>
                <Label text="Available No. of Books"/>
                <Input value="{path:'/AvailableNumber', type:'sap.ui.model.odata.type.Int16'}" placeholder="Available No. of Books."/>
                <Button text="Save" type="Accept" press="saveBook"/>
                <Button text="Cancel" type="Reject" press="closeDialog"/>
            </f:content>

        </f:SimpleForm>
    </Dialog>
</core:FragmentDefinition>