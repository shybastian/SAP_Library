<mvc:View
   xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">

   <Table id="idBooksTable"
		items="{
			path: '/Books',
			sorter: {
				path: 'Title'
			}
		}"
		growing="true"
		growingThreshold="10">
	
		<columns>
			<Column>
				<Text text="Title" />
			</Column>
			<Column>
				<Text text="Author" />
			</Column>
			<Column>
				<Text text="Published on" />
			</Column>
			<Column>
				<Text text="Language" />
			</Column>
         	<Column>
				<Text text="Available No. of Books" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier
						title="{Title}"
						text="{ISBN}"/>
					<Text text="{Author}" />
					<Text text="{ 
							path: 'DatePublished',
							type: 'sap.ui.model.type.Date'
               			}" 
					/>
					<Text text="{Language}" />
					<Text text="{= parseInt(${AvailableNumber}) }" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
   
</mvc:View>